{% extends 'base.html.twig' %}

{% block title %}Inflow{% endblock %}

{% block body %}


<a href='{{resultat.uri}}' class="container">
    <div class="row">
        <div class="col-12">
            <h1> {{resultat.name}} </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <img src="{{resultat.images[0].url}}" alt="">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p> {{resultat.description}} </p>
        </div>
    </div>
</a>

<div class="music">
    <div class="row">
        <div class="col-12">
            <h2> Musiques </h2>
        </div>
    </div>
    <div class="row">
        {% for track in music %}
        <div class="col-12">
            {# {{dump(track)}} #}
            <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/{{ track.track.uri|slice(14) }}" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            {# <h3>{{track.track.name}}</h3>
            <p>{{track.track.artists[0].name}}</p>
            <img src="{{track.track.album.images[0].url}}" alt="">
            {% if track.track.preview_url != null %}
                <audio controls>
                    <source src="{{track.track.preview_url}}" type="audio/mpeg">
                </audio>
            {% endif %} #}
        </div>
        {% endfor %}
    </div>
</div>





{% endblock %}
