<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <title>{% block title %}Inflow{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.request.attributes.get('_route') not in ['app_login', 'app_registration'] %}
            <header>
                <nav>
                    <div id="logo">
                        <a href="{{ path('app_home') }}"><img src="{{asset('build/img/all/logo.png')}}" alt="logo"></a>
                    </div>
                    <div id="main-header">
                        <a href="/">Accueil</a>
                        <a href="{{ path('app_articles') }}">Article</a>
                        <a href="{{ path('app_youtube') }}">Vidéos</a>
                        <a href="{{ path('app_spotify_list') }}">Playlists</a>
                    </div>
                    <div id="member">
                        <i class="fa-regular fa-user dropbtn" style="color: #ffffff;"></i>
                        {% if not is_granted('ROLE_USER') %}
                            <div class="dropdown">
                                <div class="dropdown-content">
                                    <a href="{{path('app_login')}}">Connexion</a>
                                    <a href="{{path('app_registration')}}">Inscription</a>
                                </div>
                            </div>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <div class="dropdown">
                                <div class="dropdown-content">
                                    <a href="/users/{{ app.user.id }}">Mon compte (<span class="username">{{ app.user.username }}</span>)</a>
                                    <a href="{{path('app_logout')}}">Déconnexion</a>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </nav>
            </header>
        {% endif %}
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
